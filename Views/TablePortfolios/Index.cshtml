@model IEnumerable<WebApplication1.TablePortfolio>

@{
    ViewBag.Title = "Index";
}

@Styles.Render("~/Content/Site.css")

<h2>Потрфель пользователя</h2>

@if (User.Identity.IsAuthenticated && !@WebApplication1.Models.GlobalVariables.IsAdmin)
{
    <p>
        @Html.ActionLink("Создать новую запись", "Create")
    </p>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ticker)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.count)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.dateBue)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.priceBue)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.dateSell)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.priceSell)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TableStock.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TableUser.login)
        </th>
        <th colspan="3"></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ticker)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.count)
            </td>
            <td>
                @if (item.dateBue != null)
                {
                    @Convert.ToDateTime(item.dateBue).ToString("dd/MM/yyyy")
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.priceBue)
            </td>
            <td>
                @if (item.dateSell != null)
                {
                    @Convert.ToDateTime(item.dateSell).ToString("dd/MM/yyyy")
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.priceSell)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TableStock.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TableUser.login)
            </td>
            <td>
                @Html.ActionLink("Подробнее", "Details", new { id = item.Id })
            </td>
            <td>
                @if (User.Identity.IsAuthenticated && !@WebApplication1.Models.GlobalVariables.IsAdmin)
                {
                    @Html.ActionLink("Редактировать", "Edit", new { id = item.Id })
                }
            </td>
            <td>
                @if (User.Identity.IsAuthenticated && !@WebApplication1.Models.GlobalVariables.IsAdmin)
                {
                    @Html.ActionLink("Удалить", "Delete", new { id = item.Id })
                }
            </td>
        </tr>
    }

</table>
